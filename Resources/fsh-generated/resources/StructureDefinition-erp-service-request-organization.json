{
  "resourceType": "StructureDefinition",
  "id": "erp-service-request-organization",
  "url": "https://gematik.de/fhir/erp-servicerequest/StructureDefinition/erp-service-request-organization",
  "version": "1.2",
  "name": "ERPServiceRequestOrganization",
  "title": "ERP Service Request Organization",
  "status": "draft",
  "experimental": false,
  "date": "2025-01-01",
  "publisher": "gematik GmbH",
  "description": "Organization that can be used to specify a KIM address",
  "fhirVersion": "4.0.1",
  "kind": "resource",
  "abstract": false,
  "type": "Organization",
  "baseDefinition": "https://fhir.kbv.de/StructureDefinition/KBV_PR_Base_Organization",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Organization.type",
        "path": "Organization.type",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Organization.type.coding",
        "path": "Organization.type.coding",
        "slicing": {
          "discriminator": [
            {
              "type": "pattern",
              "path": "system"
            }
          ],
          "rules": "open",
          "description": "Slicing to determine the type of the organization",
          "ordered": false
        },
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Organization.type.coding:organization-type",
        "path": "Organization.type.coding",
        "sliceName": "organization-type",
        "definition": "Hier kann der Typus der Einrichtung anhand eines Codes aus dem Codesystem IHE Deutschland e.V. angegeben werden. Erlaubt sind Pflegeeinrichtung, Apotheke und Arztpraxis",
        "min": 1,
        "max": "1",
        "mustSupport": true,
        "binding": {
          "strength": "required",
          "valueSet": "https://gematik.de/fhir/erp-servicerequest/ValueSet/service-request-organization-type-vs"
        }
      },
      {
        "id": "Organization.type.coding:organization-type.system",
        "path": "Organization.type.coding.system",
        "min": 1,
        "patternUri": "http://ihe-d.de/CodeSystems/PatientBezogenenGesundheitsversorgung"
      },
      {
        "id": "Organization.type.coding:organization-type.code",
        "path": "Organization.type.coding.code",
        "min": 1
      },
      {
        "id": "Organization.name",
        "path": "Organization.name",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Organization.address",
        "path": "Organization.address",
        "mustSupport": true
      },
      {
        "id": "Organization.contact",
        "path": "Organization.contact",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Organization.contact.telecom",
        "path": "Organization.contact.telecom",
        "slicing": {
          "discriminator": [
            {
              "type": "pattern",
              "path": "system"
            }
          ],
          "rules": "open",
          "description": "Slices on contact options",
          "ordered": false
        },
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Organization.contact.telecom:tel",
        "path": "Organization.contact.telecom",
        "sliceName": "tel",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Organization.contact.telecom:tel.system",
        "path": "Organization.contact.telecom.system",
        "min": 1,
        "patternCode": "phone"
      },
      {
        "id": "Organization.contact.telecom:tel.value",
        "path": "Organization.contact.telecom.value",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Organization.contact.telecom:kim",
        "path": "Organization.contact.telecom",
        "sliceName": "kim",
        "min": 0,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Organization.contact.telecom:kim.system",
        "path": "Organization.contact.telecom.system",
        "min": 1,
        "patternCode": "email"
      },
      {
        "id": "Organization.contact.telecom:kim.value",
        "path": "Organization.contact.telecom.value",
        "min": 1,
        "mustSupport": true
      }
    ]
  }
}
